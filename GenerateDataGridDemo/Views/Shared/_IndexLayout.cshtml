@using GenerateDataGridDemo.EasyUi
 
@*<!DOCTYPE html><html lang="zh"> 使用这个出现了tabs滚动条*@
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title -GenerateDataGridDemo  </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Scripts/EasyUI/themes/bootstrap/css",
            "~/Scripts/EasyUI/themes/iconcss",
            "~/Content/mycss"
            )
    @RenderSection("styles", false)
</head>
<body class="easyui-layout" id="body" style="height: 100%; width: 100%;" data-options="fit:true">
    <!--No Script S-->
    <noscript>
        <div class="noscript">
            <img src="~/Content/images/noscript.gif" alt="抱歉，请开启Javascript脚本支持！" />
        </div>
    </noscript>
    <!--No Script E-->
    <!--Header  S--->
    @Html.Partial("_Header")
    <!--Header  E--->
    <!--_NavMenu  S--->
    @Html.Partial("_NavMenu")
    <!--_NavMenu  E--->
    <!--Center  S--->
    <div data-options="region:'center',border:false" title="MainTitle">
        <div id="tabs" class="easyui-tabs" data-options="cache:false,fit:true">
            @RenderBody()
        </div>
    </div>
    <!--Center  E--->
    <!--_Footer  S--->
    @Html.Partial("_Footer")
    <!--_Footer  E--->
    <!--右键菜单 S-->
    <div id="tab-mm" class="easyui-menu" style="width: 150px;">
        <div id="tab-mm-update" data-options="name:'刷新',@IconCls.Reload">刷新</div>
        <div class="menu-sep"></div>
        <div id="tab-mm-close" data-options="name:'关闭',@IconCls.Cancel">关闭</div>
        <div id="mm-tabcloseall">全部关闭</div>
        <div id="mm-tabcloseother">除此之外全部关闭</div>
        <div class="menu-sep"></div>
        <div id="mm-tabcloseright">当前页右侧全部关闭</div>
        <div id="mm-tabcloseleft">当前页左侧全部关闭</div>
        <div id="tab-mm-exit" data-options="name:'退出'">退出</div>
    </div>
    <!--右键菜单 E-->
    <!--弹出 Window-->
    <div id="myWindow"></div>
    <!--Scripts S-->
    @Scripts.Render("~/bundles/base",
            //"~/bundles/modernizr",
            "~/bundles/jquerytools"
            //"~/Scripts/JqueryUi/ui/js"
            )
    <script src="@Url.Content("~/Scripts/EasyUI/jquery.easyui.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/EasyUI/locale/easyui-lang-zh_cn.js")" type="text/javascript"> </script>
    @Scripts.Render("~/bundles/mycomjs","~/bundles/myJs")
    @RenderSection("scripts", false)
    <script type="text/javascript">
        $(function () {
            WebJs.indexPageInit();
        });
    </script>
    <!--Scripts E-->
</body>
</html>
